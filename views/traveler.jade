extends layout

block head
  meta(charset='urf-8')
  if (id)
    title FRIB Traveler :: traveler :: #{id}
  else
    title FRIB Traveler :: traveler :: new traveler
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container
    if (id && title)
      h3 #{title}
      if (description)
        h4 #{description}
      p Created by #{createdBy} on #{createdOn}
      if (updatedBy)
        p Updated by #{updatedBy} on #{updatedOn}
      h4 Devices #{devices}
    else
      h3 New traveler

    .well-large
      form.form-horizontal#output
        != html

block js
  script(type='text/javascript', src='/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src='/javascripts/traveler.js')
