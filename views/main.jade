extends layout

block head
  title FRIB Traveler
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/font-awesome-4.0.1/css/font-awesome.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container-fluid
    .btn-toolbar
      .btn-group
        a.btn.btn-primary#new(href='/forms/new', target='_blank')
          i.fa.fa-file-o.fa-lg
          | &nbsp;New Form
      .btn-group
        button.btn.btn-primary#reload
          i.fa.fa-refresh.fa-lg
          | &nbsp;Reload
      .btn-group.dropdown
        a#meta.btn.btn-info.dropdown-toggle(data-toggle='dropdown')
          i.fa.fa-gears.fa-lg
          | &nbsp;Meta
          span.caret
        ul.dropdown-menu
          li#devices
            a(href='/devices', target='_blank') Devices
      .btn-group
        a.btn(href='/profile', target='_blank')
          i.fa.fa-user.fa-lg
          | &nbsp;Profile
      .btn-group
        a.btn(href='/about', target='_blank')
          i.fa.fa-info.fa-lg
          |&nbsp;About
    #message
    #modal.modal.hide.fade(tabindex='-1',role='dialog',data-backdrop='static',aria-labelledby='modalLabel',aria-hidden='true')
      .modal-header
        h3#modalLabel
      .modal-body
      .modal-footer
    .tabbable.tabs-left
      ul.nav.nav-tabs
        li.active
          a(href='#form', data-toggle='tab') My forms
        li
          a(href='#shared', data-toggle='tab') Shared forms
        li
          a(href='#working', data-toggle='tab') Working
        li
          a(href='#completed', data-toggle='tab') Completed
      .tab-content
        #form.tab-pane.active
          .btn-toolbar
            .btn-group
              button.btn.btn-primary#form-clone
                i.fa.fa-copy.fa-lg
                | &nbsp;Clone
            .btn-group
              button.btn.btn-warning#form-delete
                i.fa.fa-trash-o.fa-lg
                | &nbsp;Delete
            .btn-group
              button.btn.btn-info#from-select-all
                i.fa.fa-list.fa-lg
                | &nbsp;Select all
            .btn-group
              button.btn.btn-info#from-select-none
                i.fa.fa-square-o.fa-lg
                | &nbsp;Clear selection
          table#form-table.table.table-bordered.table-hover
        #shared.tab-pane
          p the list of shared travelers
        #working.tab-pane
          p the list of travelers
        #completed.tab-pane
          p the list of completed travelers

block js
  script(type='text/javascript', src='/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src='/bootstrap/js/bootstrap.js')


