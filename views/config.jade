extends layout

block head
  meta(charset='urf-8')
  title FRIB Traveler :: traveler :: #{_id} :: config
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/font-awesome-4.0.1/css/font-awesome.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container
    if (title)
      h3 Configure traveler
        = ' '
        span#title #{title}
    if (description)
      h4#desc #{description}
    else
      h4#desc No description
    p Created on #{createdOn}
    h4 Devices
    ul
    each device in devices
      li
        span #{device}
        a.btn.btn-small.btn-warning
          i.fa.fa-trash-o.fa-lg
    br
    .btn-group
      button.btn.btn-primary Add device
    if (status == 0)
      .btn-group
        button.btn.btn-primary Start to work

block js
  script(type='text/javascript', src='/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src='/jquery/jquery.jeditable.js')
  script(type='text/javascript', src='/javascripts/config.js')
