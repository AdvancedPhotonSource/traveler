extends layout

block head
  meta(charset='urf-8')
  title FRIB traveler :: forms :: #{id} :: share
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/datatables/css/dataTables.bootstrap.css')
  link(rel='stylesheet', href='/font-awesome-4.0.1/css/font-awesome.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container(style="margin-top: 10px")
    form.form-inline(method='post')
      input#username.input-medium(type='text', placeholder='Last, First', name='name')
      = ' '
      label.checkbox
        input#access(type='checkbox', name='access', value='write')
        | Write
      = ' '
      button.btn.btn-primary#add(type='submit') Add to share
    #message
    #modal.modal.hide.fade(tabindex='-1',role='dialog',data-backdrop='static',aria-labelledby='modalLabel',aria-hidden='true')
      .modal-header
        h3#modalLabel
      .modal-body
      .modal-footer
    h3 Shared user list for #{title}
    .btn-toolbar
      .btn-group
        button.btn.btn-info#share-modify
          i.fa.fa-wrench.fa-lg
          | &nbsp;Modify
      .btn-group
        button.btn.btn-warning#share-delete
          i.fa.fa-trash-o.fa-lg
          | &nbsp;Delete

    table#share-table.table.table-bordered.table-hover

block js
  script(type='text/javascript', src='/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src='/datatables/js/jquery.dataTables.js')
  script(type='text/javascript', src='/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src='/datatables/js/ZeroClipboard.js')
  script(type='text/javascript', src='/datatables/js/TableTools.js')
  script(type='text/javascript', src='/datatables/js/dataTables.bootstrap.js')
  script(type='text/javascript', src='/dependency/typeahead.js')
  script(type='text/javascript', src='/javascripts/table.js')
  script(type='text/javascript', src='/javascripts/util.js')
  script(type='text/javascript', src='/javascripts/share.js')