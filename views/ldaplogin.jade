extends layout

block head
    meta(charset='urf-8')
    title #{orgName} Traveler :: login
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='#{prefix}/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='#{prefix}/stylesheets/style.css')

block content
    .container(style="margin-top: 25px")
        if errorMessage
            div.alert.alert-error
                p An error occurred: #{errorMessage}

        form.form-horizontal(name='login', action='./', method='POST')
            .row
                .col-md-3
                    .mb-3
                        .form-label Username
                        input.form-control(type='text', name='username', required)
                    .mb-3
                        .form-label Password
                        input.form-control(type='password', name='password', required)

                    button.btn.btn-primary(type='submit') Log in
block js
    script(type='text/javascript', src='#{prefix}/jquery/jquery.js')
    script(type='text/javascript', src='#{prefix}/bootstrap/js/bootstrap.bundle.js')
